{
  "name": "商品卡片",
  "description": "适合电商产品的卡片样式，支持图片、名称、价格和描述",
  "cardBg": "#ffffff",
  "cardText": "#1f2937",
  "cardBorder": "#e5e7eb",
  "cardRadius": 12,
  "cardPadding": 16,
  "cardShadow": "md",
  "fields": {
    "image": {
      "key": "image",
      "altKey": "url",
      "aspectRatio": "1/1",
      "objectFit": "cover",
      "borderRadius": 8,
      "marginBottom": 12
    },
    "name": {
      "key": "name",
      "tag": "h3",
      "fontSize": 16,
      "fontWeight": 600,
      "marginBottom": 8
    },
    "price": {
      "key": "price",
      "fontSize": 18,
      "fontWeight": 700,
      "color": "#7c2bee",
      "marginBottom": 8
    },
    "description": {
      "key": "description",
      "altKey": "desc",
      "fontSize": 13,
      "lineHeight": 1.5,
      "color": "#6b7280",
      "maxLines": 2
    }
  },
  "hover": {
    "transformY": -4,
    "shadow": "lg",
    "imageScale": 1.05
  }
}